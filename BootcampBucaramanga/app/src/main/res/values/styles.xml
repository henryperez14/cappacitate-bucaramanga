<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rojo</item>
    </style>

    <style name="MiBarra" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
       <item name="background">@color/naranja_unab</item>
    </style>

    <style name="MiEstiloApp" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- De la manera antigua -->
        <item name="android:actionBarStyle">@style/MiBarra</item>
        <!-- De la manera nueva -->
        <item name="colorPrimary">@color/naranja_unab</item>
    </style>

</resources>
